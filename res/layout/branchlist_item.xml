<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:id="@+id/item_layout">

	<ImageView android:id="@+id/folder"
		android:layout_alignParentLeft="true" android:paddingLeft="10sp"
		android:layout_height="32sp" android:layout_width="32sp"
		android:background="#00000000"
		android:layout_gravity="center_vertical" />

	<interdroid.vdb.persistence.ui.CommitExpandableListView
		android:id="@+id/commits_list" android:layout_toRightOf="@+id/folder"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

</RelativeLayout>